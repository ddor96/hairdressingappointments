<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Corner radius -->
    <corners android:radius="8dp" />

    <!-- Background color -->
    <solid android:color="@color/white" />

    <!-- Optional: Border -->
    <stroke
        android:width="1dp"
        android:color="@color/theme" />

    <!-- Optional: Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
